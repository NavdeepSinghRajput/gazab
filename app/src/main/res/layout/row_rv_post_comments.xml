<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/post_detail_back">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp">
            <ImageView
                android:background="?attr/drw_highlight"
                android:scaleType="centerCrop"
                android:id="@+id/ivProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:tint="?attr/post_detail_back"
                android:src="@drawable/feed_detail_box_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <com.gazabapp.customeview.TextView_custom
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:textColor="?attr/comment_username"
            android:text="@string/username"
            android:id="@+id/tvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@drawable/single_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.gazabapp.customeview.TextView_custom
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:textColor="?attr/ago_post_comment"
            android:text="@string/ago"
            android:id="@+id/tvAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <com.gazabapp.customeview.ExpandableTextView_custom
        android:layout_marginLeft="50dp"
        android:textColor="?attr/comment_post_main"
        android:id="@+id/tvComment"
        android:textStyle="bold"
        android:text="@string/comments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.gazabapp.customeview.TextView_custom
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="?attr/comment_reply"
            android:text="@string/reply"
            android:id="@+id/tvReply"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.gazabapp.customeview.Checkbox_custom
            android:background="@android:color/transparent"
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="?attr/comment_more_reply"
            android:button="@null"
            android:text="@string/more_reply"
            android:id="@+id/cbMoreReply"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <ListView
        android:visibility="gone"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rcvCommentChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
