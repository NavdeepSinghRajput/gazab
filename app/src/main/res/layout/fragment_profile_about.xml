<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/profile_base_back"
    android:orientation="vertical"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:nestedScrollingEnabled="true"
    android:scrollbars="none">

    <LinearLayout
        android:foregroundGravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/back_about_text_block"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.gazabapp.customeview.TextView_custom
                android:textStyle="bold"
                android:textSize="40dp"
                android:text="@string/_0000"
                android:id="@+id/tvFollowers"
                android:textColor="?attr/about_text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.gazabapp.customeview.TextView_custom
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="@string/followers"
                android:textColor="?attr/about_text_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_about_text_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.gazabapp.customeview.TextView_custom
                android:textSize="26dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="?attr/about_text_sub"
                android:text="@string/activity"
                android:background="@drawable/back_about_text_block_first_half"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.gazabapp.customeview.TextView_custom
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:text="@string/_0000"
                    android:id="@+id/tvPosts"
                    android:textColor="?attr/about_text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.gazabapp.customeview.TextView_custom
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="@string/posts"
                    android:textColor="?attr/about_text_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="?attr/about_text_divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.gazabapp.customeview.TextView_custom
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:text="@string/_0000"
                    android:id="@+id/tvComments"
                    android:textColor="?attr/about_text_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.gazabapp.customeview.TextView_custom
                    android:layout_marginTop="5dp"
                    android:textSize="16dp"
                    android:text="@string/comments"
                    android:textColor="?attr/about_text_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/back_about_text_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.gazabapp.customeview.TextView_custom
                    android:textColor="?attr/about_text_sub"
                    android:text="@string/about"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="10dp"/>
                <ImageView
                    android:id="@+id/ivEditAboutUs"
                    android:src="@drawable/edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <com.gazabapp.customeview.TextView_custom
                android:layout_marginTop="10dp"
                android:textColor="?attr/about_text_sub"
                android:text="@string/dumy_text"
                android:id="@+id/tvAbout"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>
