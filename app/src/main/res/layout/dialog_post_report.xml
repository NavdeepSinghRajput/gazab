<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="60dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/back_post_report">


    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivClose"
            android:layout_margin="20dp"
            android:src="@drawable/close_post_report_dialog"
            android:adjustViewBounds="true"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
    </LinearLayout>

    <com.gazabapp.customeview.TextView_custom
        android:layout_marginLeft="40dp"
        android:id="@+id/tvCopyLink"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:clickable="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="?attr/dialog_post_report_text"
        android:text="@string/copy_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/v1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/dialog_post_report_line"/>
    <com.gazabapp.customeview.TextView_custom
        android:layout_marginLeft="40dp"
        android:id="@+id/tvDownload"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:clickable="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="?attr/dialog_post_report_text"
        android:text="@string/download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/v2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/dialog_post_report_line"/>
    <com.gazabapp.customeview.TextView_custom
        android:visibility="gone"
        android:layout_marginLeft="40dp"
        android:id="@+id/tvDelete"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:clickable="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="?attr/dialog_post_report_text"
        android:text="@string/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:visibility="gone"
        android:id="@+id/v3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/dialog_post_report_line"/>
    <com.gazabapp.customeview.TextView_custom
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/tvReport"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:clickable="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="?attr/dialog_post_report_text"
        android:text="@string/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>
